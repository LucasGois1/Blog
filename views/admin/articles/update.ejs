<%- include('../../partials/head.ejs') %>

    <body>
        <%- include('../../partials/navbar.ejs') %>
            <div class="container">
                <br>
                <div class="card">
                    <div class="card-header">
                        <h2>Editar artigo</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/articles/update">
                            <input type="hidden" name="id" value="<%= article.id %> ">
                            <label style="width: 100%;">
                                <h3>Título</h3>
                                <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>">
                            </label>

                            <label style="width: 100%;">
                                <br>
                                <h3>Conteúdo do artigo</h3>
                                <textarea class="form-control" name="body" id="mytextarea" cols="30" rows="10"></textarea>
                                <br>
                            </label>

                            <h4>Selecione uma categoria</h4>
                            <div class="d-flex flex-row mr-auto">

                                <select class="form-control" name="categoryId" id="drop-categories" style="margin-right: 20px;">
                                    <% categories.forEach((category) => { %>
                                        <% if (category.id == article.categoryId) { %>
                                            <option selected value="<%= category.id %> "><%= category.title %> </option>
                                        <% } else { %>
                                            <option value="<%= category.id %> "><%= category.title %> </option>
                                            <% } %>
                                    <% }) %>
                                </select>
                                <button class="btn btn-success" style="margin-right: 600px;">Postar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div id="article-body" style="display: none;">
                <%- article.body %>
            </div>
    </body>

    <%- include('../../partials/footer.ejs') %>